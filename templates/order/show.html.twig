{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table"> 
        <thead>
            Votre commande est validée et enregistré merci pour votre achat !<br>
            Recap : <br>
        </thead>
        <tbody>
            <tr>
                <th>Votre numéro de commande : </th>
                <td>{{ order.orderNumber }}</td>
            </tr>
            <tr>
                <th>Validé à </th>
                <td>{{ order.dateTime ? order.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% for cartline in cart_lines %}
                <tr>
                    <th>Produit : </th>
                    <td>{{ cartline.product.name }}</td>
                </tr>
                <tr>
                    <th>Quantité : </th>
                    <td>{{ cartline.quantity }}</td>
                </tr>
                <tr>
                    <th>Prix : </th>
                    <td>{{ cartline.product.price }}</td>
                </tr>
            {% endfor %}
            <tr>
                <th>Total : </th>
                <td>{{ total }}</td>
            </tr>
            <tr>
                <th>Adresse de livraison : </th>
                <td>{{ adress[0].address }},{{ adress[0].city }} {{ adress[0].postalCode }} {{ adress[0].country}} </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('home', {'clear_cart': true}) }}">Retour à l'accueil</a>

    {# <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a> #}

    {# {{ include('order/_delete_form.html.twig') }} #}
{% endblock %}
