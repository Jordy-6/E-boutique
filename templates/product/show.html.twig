{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
               <td><img src="{{ asset(img[0].path ~ img[0].type) }}" alt="{{ img[0].alt }}" ></td>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ product.available ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{path('app_cart_line_new', {'productId': product.id})}}"> ajouter au panier</a>

    <a href="{{ path('app_product_index') }}">back to list</a>

{% endblock %}
