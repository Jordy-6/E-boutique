{% extends 'base.html.twig' %}

{% block title %}CartLine index{% endblock %}

{% block body %}
    <h1>CartLine index</h1>
    {% if app.user %}

        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Car</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart_line in cart_lines %}
            <tr>
                <td>{{ cart_line.id }}</td>
                <td>{{ cart_line.product.name }}</td>
                <td>{{ cart_line.product.price }}</td>
                {# <td>{{ cart_line.quantity }}</td> #}
                {# put an inpout likje this modifiable for the quantity <input type="number" value="1" min="1" max="10"> #}
                <td>
                   <form action="{{ path('app_cart_line_edit', {'id': cart_line.id}) }}" method="post">
                        <input type="number" name="quantity" value="{{ cart_line.quantity }}" min="1" max="10">
                        <input type="submit" value="Update">
                    </form>
                    <form method="post" action="{{ path('app_cart_line_delete', {'id': cart_line.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cart_line.id) }}">
                        <button class="btn">Delete</button>
                    </form>

                </td>
             </tr> 
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="3">Total: {{ total }}</td>
        </tr>
        <tr>
            <td colspan="3">
                <a href="{{ path('app_customer_address_new') }}">Commander</a>
            </td>
        </tbody>
    </table>

        
    {% else %}
        <h1>Vous devez être connecté pour voir votre panier</h1>
    {% endif %}
    
    {# <a href="{{ path('app_cart_line_new') }}">Create new</a> #}
{% endblock %}
